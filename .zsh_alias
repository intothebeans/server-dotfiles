# ls command 
alias ls='eza --color=always --icons=always --hyperlinks --classify=always --group-directories-first' 
alias l='ls -lho'
alias la='ls -lA'
alias lr='ls -lRA --sort=date'
alias lt='ls -lA --sort=date'
alias lart='ls -1a --sort=age'
alias lrt='ls -1 --sort=age'
alias lsr='ls -1R'
alias lsn='ls -1'

# file handling 
alias rm='trash '
alias cp='rsync -avz --progress -h'
alias mv='rsync -avz --progress -h --remove-source-files'
alias mvup='rsync -avzu --progress -h'
alias mvs='rsync -avzu --delete --progress -h'
alias zshrc='${=EDITOR} ~/.zshrc'
alias dud='du -d 1 -h'
alias duf='du -sh'
alias t='tail -f'

# find and grep 
alias fd='find . -type d -name'
alias ff='find . -type f -name' 
alias gr='grep --color'

# head tail shortcuts
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g L='| less'

# other 
alias h='history'
alias p='ps -f'
alias c='clear'
alias tree="eza -T "
alias se="sudoedit"
alias nv="nvim" 
alias prev-log="SYSTEMD_COLORS=1 journalctl -b 1 -k | less +^ -r"
alias sudo="sudo "
alias vim="nvim"
