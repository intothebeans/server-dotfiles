# ls command
alias ls='eza --color=always --icons=always --hyperlink --classify=always --group-directories-first'
alias l='ls -lho'
alias la='ls -lA'
alias lr='ls -lRA --sort=date'
alias lt='ls -lA --sort=date'
alias lart='ls -1a --sort=age'
alias lrt='ls -1 --sort=age'
alias lsr='ls -1R'
alias lsn='ls -1'

# file handling
alias rm='trash '
alias cp='rsync -avz --progress -h'
alias mv='rsync -avz --progress -h --remove-source-files'
alias mvup='rsync -avzu --progress -h'
alias mvs='rsync -avzu --delete --progress -h'
alias zshrc='${=EDITOR} ~/.zshrc'
alias t='tail -f'

# head tail shortcuts
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g L='| less'

# other
alias h='history'
alias tree="eza -T "
alias se="sudoedit"
alias nv="nvim"
alias prev-log="SYSTEMD_COLORS=1 journalctl -b 1 -k | less +^ -r"
alias sudo="sudo "
alias vim="nvim"
