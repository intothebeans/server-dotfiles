alias ls='eza --git --color=always --icons=always --hyperlink --classify=always --group-directories-first '
alias l='ls -lho'
alias la='ls -lhAo'
alias lr='ls -lRA --sort=date'
alias lt='ls -lA --sort=date'
alias lart='ls -hao --sort=age'
alias lrt='ls -ho --sort=age'
alias lsr='ls -1RL 3'

# file handling
alias tr="trash "
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'
alias mvup='mv -uiv'
alias sync='rsync -avzu --delete --progress -h'
alias t='tail -f'

# head tail shortcuts
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g P='| most'

# other
alias h='history'
alias tree="eza -T "
alias se="sudoedit"
alias nv="nvim"
alias prev-log="SYSTEMD_COLORS=1 journalctl -b 1 -k | less +^ -r"
alias sudo="sudo "
alias vim="nvim"
